# Default: store LF in repo
* text=auto eol=lf

# Common text formats
*.py   text eol=lf
*.md   text eol=lf
*.txt  text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.sql  text eol=lf
*.ps1  text eol=lf
*.psm1 text eol=lf

# Windows shell files (if you ever add them)
*.bat  text eol=crlf
*.cmd  text eol=crlf
